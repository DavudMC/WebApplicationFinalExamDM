
@model List<MemberGetVM>
<div class="container">
    <div class="row">
        <div class="col-2">
            <a asp-action="Create" class="btn btn-success">Create</a>
        </div>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">FirstName</th>
                    <th scope="col">LastName</th>
                    <th scope="col">ImagePath</th>
                    <th scope="col">PositionId</th>
                    <th scope="col">PositionName</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var member in Model)
                {
                    <tr>
                        <th scope="row">@member.Id</th>
                        <td>@member.FirstName</td>
                        <td>@member.LastName</td>
                        <td>@member.ImagePath</td>
                        <td>@member.PositionId</td>
                        <td>@member.PositionName</td>
                        <td>
                            <a asp-action="Delete" asp-route-id="@member.Id" class="btn btn-danger">Delete</a>
                            <a asp-action="Update" asp-route-id="@member.Id" class="btn btn-warning">Update</a>
                        </td>

                    </tr>
                }


            </tbody>
        </table>
    </div>
</div>

